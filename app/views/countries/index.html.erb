<h1>This is the destination for your world travel</h1>

<div class="row">
    <div class="col-md-6">
      <div class="card text-white bg-secondary border-primary mb-3">
        <div class="card-header">
          <h3>Most reviewed</h3>
        </div>
        <div class="card-body">
          <h3><%= @most_reviewed_country[0]["name"] %></h3>
          Reviews: <%= @most_reviewed_country[0]["reviews_count"] %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card text-white bg-secondary border-primary mb-3">
        <div class="card-header">
          <h3>Most Satisfied</h3>
        </div>
        <div class="card-body">
          <h3><%= @most_satisfied_country[0]["name"] %></h3>
          Rating Average: <%= @most_satisfied_country[0]["reviews_rating"] %>
        </div>
      </div>
    </div>
</div>

<h3>The list of all country you can travel in the world</h3>
<% if @countries.any? %>
<div class="row">

  <% @countries.each do |country| %>
      <div class="col-md-4">
         <%= link_to "#{country[0]["name"]}", country_path(country[0]["id"]) %>
      </div>
      <% end %>

</div>
  <% end %>
